<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="" />
    <link
      rel="stylesheet"
      as="style"
      onload="this.rel='stylesheet'"
      href="https://fonts.googleapis.com/css2?display=swap&amp;family=Noto+Sans%3Awght%40400%3B500%3B700%3B900&amp;family=Spline+Sans%3Awght%40400%3B500%3B700"
    />

    <title>Course Details - SkillSwap-Hub</title>
    <link rel="icon" type="image/x-icon" href="data:image/x-icon;base64," />

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        cream: '#EFE4D2',
                        navy: '#254D70',
                        darkBlue: '#131D4F',
                        brown: '#954C2E'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50" style="font-family: 'Spline Sans', 'Noto Sans', sans-serif;">
    <!-- Navigation Header -->
    <header class="sticky top-0 z-50 flex items-center justify-between whitespace-nowrap border-b border-solid border-b-[#f1f2f4] px-10 py-3 bg-white bg-opacity-90 backdrop-blur">
          <div class="flex items-center gap-4 text-[#121417]">
            <div class="size-4">
              <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M24 45.8096C19.6865 45.8096 15.4698 44.5305 11.8832 42.134C8.29667 39.7376 5.50128 36.3314 3.85056 32.3462C2.19985 28.361 1.76794 23.9758 2.60947 19.7452C3.451 15.5145 5.52816 11.6284 8.57829 8.5783C11.6284 5.52817 15.5145 3.45101 19.7452 2.60948C23.9758 1.76795 28.361 2.19986 32.3462 3.85057C36.3314 5.50129 39.7376 8.29668 42.134 11.8833C44.5305 15.4698 45.8096 19.6865 45.8096 24L24 24L24 45.8096Z"
                  fill="currentColor"
                ></path>
              </svg>
            </div>
            <h2 class="text-[#121417] text-lg font-bold leading-tight tracking-[-0.015em]">SkillSwap-Hub</h2>
          </div>
          <div class="flex flex-1 justify-end gap-8">
            <div class="flex items-center gap-9">
              <a class="text-[#131416] text-sm font-medium leading-normal" href="/users/home">Home</a>
              <a class="text-[#131416] text-sm font-medium leading-normal" href="/users/about-us">About Us</a>
              <a class="text-[#131416] text-sm font-medium leading-normal" href="/users/myCourse">My courses</a>
              <a class="text-[#131416] text-sm font-medium leading-normal" href="/users/contact">Contact</a>
              <a class="text-[#131416] p-2 rounded-md bg-red-500 text-sm font-medium leading-normal" href="/users/logout">Log-out</a>
            </div>
            <div class="relative">
            <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10 border-2">
                <img class="w-full h-full object-cover" src="<%= user.profileImage %>" alt="">
            </div>
            <a href="/users/profile" class="absolute -bottom-1 -right-1 bg-white rounded-full p-1 shadow-lg border border-gray-200 hover:bg-gray-50 transition-colors duration-200">
                <svg class="w-3 h-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
            </a>
            </div>
          </div>
        </header>

    <!-- Main Content -->
    <main class="container mx-auto px-6 py-8">
        <div class="grid lg:grid-cols-3 gap-8">
            <!-- Left Column - Course Content -->
            <div class="lg:col-span-2">
                <!-- Course Hero Image -->
                <section class="mb-8">
                    <div class="relative rounded-xl overflow-hidden shadow-lg">
                        <img src="/images/uploads/<%= instructorCourse.courseImage %>" alt="Course Preview" class="w-full h-96 object-cover">
                        <div class="absolute inset-0 bg-darkBlue/20"></div>
                    </div>
                </section>

                <!-- Course Navigation Tabs -->
                <section class="mb-8">
                    <div class="flex flex-wrap gap-3">
                        <button class="px-6 py-3 bg-navy text-white rounded-lg font-medium transition duration-300">
                            Overview
                        </button>
                        <button id="scroll-instructor" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition duration-300">
                            Instructor
                        </button>
                    </div>
                </section>

                <!-- Course Description -->
                <section class="mb-8">
                    <div class="bg-white rounded-xl p-6 shadow-lg">
                        <h2 class="text-2xl font-bold text-darkBlue mb-4">Course Description</h2>
                        <%= instructorCourse.about %>
                    </div>
                </section>

                 <!-- About the Instructor Section -->
                <section id="about-instructor" class="mb-8">
                    <div class="bg-cream rounded-xl p-6 shadow-lg">
                        <h2 class="text-2xl font-bold text-darkBlue mb-6">About the Instructor</h2>
                        
                        <div class="flex flex-col md:flex-row gap-6">
                            <!-- Instructor Profile Image -->
                            <div class="flex-shrink-0">
                                <img src="<%= instructor.profileImage %>" alt="Instructor Profile" class="w-32 h-32 rounded-full object-cover bg-gray-300 border-4 border-white shadow-lg">
                            </div>
                            
                            <!-- Instructor Details -->
                            <div class="flex-1">
                                <!-- Name -->
                                <h3 class="text-xl font-bold text-darkBlue mb-2">Dr. <%= instructor.name %></h3>
                                
                                <!-- Email -->
                                <div class="flex items-center mb-3">
                                    <svg class="w-5 h-5 text-navy mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                                    </svg>
                                    <span class="text-gray-700 font-medium"><%= instructor.email %></span>
                                </div>
                                
                                <!-- Location -->
                                <div class="flex items-center mb-4">
                                    <svg class="w-5 h-5 text-navy mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="text-gray-700 font-medium"><%= instructor.location %></span>
                                </div>
                                
                                <!-- Bio -->
                                <div class="mb-4">
                                    <h4 class="text-lg font-semibold text-darkBlue mb-2">About</h4>
                                    <p class="text-gray-700 leading-relaxed">
                                        <%= instructor.bio %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Instructor Specializations -->
                        <div class="mt-6">
                            <h4 class="text-lg font-semibold text-darkBlue mb-3">Specializations</h4>
                            <div class="flex flex-wrap gap-2">
                                
                                <span class="bg-navy text-white px-3 py-1 rounded-full text-sm font-medium"><%= instructorCourse.skillsOffered %></span>

                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <!-- Right Column - Course Info -->
            <div class="lg:col-span-1">
                <!-- Pricing Card -->
                <section class="mb-8">
                    <div class="bg-white rounded-xl p-6 shadow-lg sticky top-24">
                        <!-- Course Preview Image -->
                        <div class="mb-4">
                            <img src="/web-cousrse-buy.jpg" alt="Course Preview" class="w-full h-32 object-cover rounded-lg bg-gray-200">
                        </div>

                        <!-- Pricing -->
                        <div class="mb-6">
                            <div class="flex items-center space-x-3 mb-2">
                                <span class="text-3xl font-bold text-darkBlue">$<%= instructorCourse.price %></span>
                                <span class="text-lg text-gray-400 line-through">$<%= instructorCourse.price + instructorCourse.price*(30/100)%></span>
                                <span class="bg-brown text-white px-2 py-1 rounded text-sm font-medium">30% Off</span>
                            </div>
                            <p class="text-sm text-brown font-medium">11 hours left at this price</p>
                        </div>

                        <!-- Buy Button -->
                        <a href="/users/call/<%= instructor._id %>/<%= instructorCourse._id %>">
                        <button class="w-full bg-navy hover:bg-darkBlue text-white font-bold py-3 px-6 rounded-lg transition duration-300 mb-4">
                            Contact the instructor
                        </button>
                        </a>

                        <!-- Course Includes -->
                        <div class="mb-6">
                            <h4 class="font-bold text-darkBlue mb-4">This Course Includes</h4>
                            <div class="space-y-3">
                                <div class="flex items-center space-x-3">
                                    <div class="w-5 h-5 bg-navy rounded-full flex items-center justify-center">
                                        <span class="text-white text-xs">‚úì</span>
                                    </div>
                                    <span class="text-gray-700">Money Back Guarantee</span>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <div class="w-5 h-5 bg-navy rounded-full flex items-center justify-center">
                                        <span class="text-white text-xs">üì±</span>
                                    </div>
                                    <span class="text-gray-700">Access on all devices</span>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <div class="w-5 h-5 bg-navy rounded-full flex items-center justify-center">
                                        <span class="text-white text-xs">üèÜ</span>
                                    </div>
                                    <span class="text-gray-700">Certificate of completion</span>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <div class="w-5 h-5 bg-navy rounded-full flex items-center justify-center">
                                        <span class="text-white text-xs">üìö</span>
                                    </div>
                                    <span class="text-gray-700">1-1 Mentorship</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-darkBlue text-white py-16 mt-16">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
                <!-- Company Info -->
                <div>
                    <h4 class="text-2xl font-bold mb-4">
                        <span class="text-cream">SkillSwap-Hub</span>
                    </h4>
                    <p class="text-gray-300 mb-4">
                        Empowering learners worldwide with quality education and expert instruction.
                    </p>
                </div>
                
                <!-- Quick Links -->
                <div>
                    <h5 class="text-lg font-semibold mb-4">Quick Links</h5>
                    <ul class="space-y-2">
                        <li><a href="/" class="text-gray-300 hover:text-cream transition duration-300">Home</a></li>
                        <li><a href="/courses" class="text-gray-300 hover:text-cream transition duration-300">Courses</a></li>
                        <li><a href="/instructors" class="text-gray-300 hover:text-cream transition duration-300">Instructors</a></li>
                        <li><a href="/about" class="text-gray-300 hover:text-cream transition duration-300">About Us</a></li>
                    </ul>
                </div>
                
                <!-- Categories -->
                <div>
                    <h5 class="text-lg font-semibold mb-4">Categories</h5>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-300 hover:text-cream transition duration-300">Design</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-cream transition duration-300">Development</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-cream transition duration-300">Business</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-cream transition duration-300">Marketing</a></li>
                    </ul>
                </div>
                
                <!-- Support -->
                <div>
                    <h5 class="text-lg font-semibold mb-4">Support</h5>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-300 hover:text-cream transition duration-300">Help Center</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-cream transition duration-300">Privacy Policy</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-cream transition duration-300">Terms of Service</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-cream transition duration-300">FAQ</a></li>
                    </ul>
                </div>
            </div>
            
            <!-- Bottom Footer -->
            <div class="border-t border-gray-600 pt-8 text-center">
                <p class="text-gray-400">&copy; 2024 SkillSwap-Hub. All rights reserved.</p>
            </div>
        </div>
    </footer>
    <script>
        document.getElementById('scroll-instructor').addEventListener('click', function() {
            document.getElementById('about-instructor').scrollIntoView({ behavior: 'smooth' });
        });
    </script>
</body>
</html>